.list-group(
    ng-class="'size-' + $ctrl.valueEditorController.size"
    data-main-input
)
    button.list-group-item(
        type="button"
        ng-disabled="$ctrl.valueEditorController.isDisabled"
        ng-repeat="$item in $ctrl.options.acceptableValues track by $index"
        ng-class="{'active': $ctrl.isSelected($item), 'isDisabled': $ctrl.valueEditorController.isDisabled}"
        ng-click="$ctrl.selectItem($item)"
    ) {{optionsTemplate}}

input.validation-helper(
    type="text"

    id!="\\{\\{$ctrl.valueEditorController.editorId\\}\\}"
    name="\\{\\{$ctrl.valueEditorController.editorName\\}\\}"

    ng-model="$ctrl.model"
    ng-model-options="{ getterSetter: true}"

    ng-required="$ctrl.valueEditorController.validations.required"

    kp-async-validation="$ctrl.valueEditorController.validations.async"

    error-messages
)
