.pretty.p-icon.p-smooth.p-curve(ng-class="'size-' + $ctrl.valueEditorController.size")
    input(
        type="checkbox"
        name!="\\{\\{$ctrl.valueEditorController.editorName + '_' + index\\}\\}"

        ng-model="$ctrl.checkboxModel($item)"
        ng-model-options="{getterSetter: true}"

        ng-click="$ctrl.updateModel($item)"

        ng-disabled="$ctrl.isDisabled($item)"
    )

    .state.p-primary
        i.icon.glyphicon.glyphicon-ok
        label &nbsp;
