doctype html

html
    head
        title Value Editor Demo
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
        script(src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous")

    body(ng-app="app" ng-strict-di)
        h1 Value Editor Demo
        main(ng-controller="demoController as dc" ng-init="disabled = false; template = '{{$item.x}}'")

            kp-value-editor(
                ng-model="value"
                editor-id="ajdy"
                type="'acceptable'"
                status="status"
                disabled="disabled"
                validations="{required: true}"
                options="{" +
                    "acceptableValues: dc.acceptableValues," +
                    "optionsTemplate: '{{$item.x}}'," +
                    "singleSelectedValueTemplate: '{{$select.selected.x}}'," +
                    "multiSelectedValueTemplate: '{{$item.x}}'," +
                    "multiselectable: true," +
                    "showFirstCount: 5," +
                    "switchToCheckboxesThreshold: 0," +
                    "selectedFirst: true," +
                    "comparator: dc.comp," +
                    "sortModel: false" +
                "}"
                placeholder="Select..."
            )

            hr
            div
                label Template:
                    input(type="text" ng-model="template")

            div
                label Disabled:
                    input(type="checkbox" ng-model="disabled")

            div Value:
                input(ng-model="value")

            div Model: {{value | json}}
            div {{status | json}}
            ul
                li(ng-repeat="(errorName, errorValue) in status.$error") {{errorName}}
