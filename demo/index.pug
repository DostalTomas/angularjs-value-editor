doctype html

html
    head
        title Value Editor Demo
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
        script(src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous")

    body(ng-app="app" ng-strict-di)
        h1 Value Editor Demo
        main(ng-controller="demoController as dc" ng-init="disabled = false; value = 'signatura'")
            form.form-horizontal(name="dc.form")
                .form-group
                    label.control-label.col-lg-2(for="editor") Label
                    kp-value-editor.col-lg-10(
                        ng-model="value"
                        editor-id="editor"
                        name="pass"
                        type="'signature'"
                        disabled="disabled"
                        placeholder="Password"
                        options="{" +
                            "canDoAction: true" +
                        "}"
                        validations="{required: true, minlength: 4}"
                    )


            button(type="button" ng-click="value = undefined") Reset

            div
                label Disabled:
                    input(type="checkbox" ng-model="disabled")

            div Value:
                input(ng-model="value")

            div Model: {{value | json}}

            div Errors
                ul
                    li(ng-repeat="(errorName, errorValue) in dc.form.$error") {{errorName}}

